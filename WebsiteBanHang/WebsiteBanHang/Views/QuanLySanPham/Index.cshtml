@model IEnumerable<WebsiteBanHang.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
@*THể hiện dữ liệu thông qua control webgird*@


@grid.GetHtml(
        tableStyle: "divTable",// class css cho  thẻ table
        headerStyle: "gridHead",// class css cho các tiêu đề của table
        footerStyle: "gridFooter",
            rowStyle: "gridRow",// class css cho các row lẽ
        alternatingRowStyle: "gridAltRow",// class css các row chẵn (xen kẽ)
    columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm"),
    grid.Column("TenSP", "Tên SP"),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"150\" height=\"50\" src=\"../Content/HinhAnhSP/" + p.HinhAnh + "\">")),
    grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaSP })),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
    ))


@*Css cho từng Style của table*@
<style>
