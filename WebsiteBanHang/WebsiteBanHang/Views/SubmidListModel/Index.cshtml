@model WebsiteBanHang.Models.PhieuNhap
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <input name="MaPN" />
    <input name="MaNCC" />
    for (int i = 0; i < 10; i++)
    {
        <h2>Thông tin Sản Phẩm @i</h2>
        @*Để MVC tự động trả dữ liệu model theo dạng list thì cách đặt tên như sau ["Chỉ số phần tủ"].Thuộc tính (Thuộc tính này là 1 list thuộc đối tượng Model)*@
        <input name="@Url.Content("["+i+"].MaSP")" value="@i" /> <br />
        <input name="@Url.Content("["+i+"].DonGiaNhap")" value="10000" />   <br />
        <input name="@Url.Content("["+i+"].SoLuongNhap")" value="100" />  <br />
    }
    <input type="submit" value="Đồng ý" />
}
