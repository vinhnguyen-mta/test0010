@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc; 
@using WebsiteBanHang.Models;
@model ThanhVien

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}


    <div class=" register">
        <h1>Đăng Ký Thành Viên</h1>
        @using (Html.BeginForm())
        {
             @Html.AntiForgeryToken()
            <hr />
             @Html.ValidationSummary(true)
     
            <div class="col-md-4 register-top-grid">
                <h3>Thông tin cá nhân</h3>
                <div>
                    @Html.LabelFor(s=>s.TaiKhoan)
                     @Html.TextBoxFor(model => model.TaiKhoan, new { @class ="cTaikhoan"})
                    @Html.ValidationMessageFor(model=>model.TaiKhoan)
                </div>
                <div>
                    @Html.LabelFor(s=>s.HoTen)
                    @Html.TextBox("HoTen")
                </div>
                <div>
                    @Html.LabelFor(s=>s.DiaChi)
                    @Html.TextBox("DiaChi")
                </div>
                <div>
                    @Html.LabelFor(s=>s.Email)
                    @Html.TextBox("Email")
                </div>
                <div>
                    @Html.LabelFor(s=>s.SoDienThoai)
                    @Html.TextBox("SoDienThoai")
                </div>
             
            </div>
            <div class="col-md-4 register-bottom-grid">
                <h3>Thông Tin Đăng Nhập</h3>
                <div>
                    @Html.LabelFor(s=>s.MatKhau)
                    @Html.Password("MatKhau")
                </div>
                <div>
                    @Html.LabelFor(s=>s.MatKhau)                
                      @Html.Password("MatKhau")                 
                </div>
                <div>
                    @Html.LabelFor(s=>s.CauHoi)
                    @Html.DropDownList("CauHoi")
                      </div>
                <div>
                    @Html.LabelFor(s=>s.CauTraLoi)
                      @Html.TextBox("CauTraLoi", "", new { @class="class1"})
                </div>
                <div>
                    @Html.Captcha(5);
                </div>
                <input  type="submit" value="Đăng Ký">

            </div>
            <div class="clearfix"> </div>
        }
    </div>
<h1 style="color:red">@ViewBag.ThongBao</h1>
<style>

    .class1 {
        width: 100%;
        padding: 1em;
        margin: 1em 0;
        background: none;
        outline: none;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }
</style>