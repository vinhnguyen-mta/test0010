@using WebsiteBanHang.Models;
@model IEnumerable<SanPham>

@foreach (var i in Model.Take(3))
{
    <div class="col-md-4 grid-top">
        <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id=i.MaSP})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+i.HinhAnh)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-left    b-delay03 " style="text-align:left;font-size:15pt;">
                    @Html.Raw(i.CauHinh)
                    
                </h3>
            </div>
        </a>
        <p><a href="single.html">@i.TenSP</a></p>
    </div>
}
    
